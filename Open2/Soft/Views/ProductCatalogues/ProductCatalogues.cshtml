@using Open.Archetypes.ProductClasses
@model Soft.Models.ProductCatalogueViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Product Catalogue | @Model.CatalogueName</title>
</head>
<body>
<h2>@Model.CatalogueName</h2>
<p>
    Create New
    @Html.ActionLink("Entry", "Create")
</p>
<table class="table">
    <tr>
        <th>
            UniqueID
        </th>
        <th>
            Name
        </th>
        <th>
            Valid from
        </th>
        <th>
            Valid to
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.CatalogueEntries)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UniqueId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValidFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValidTo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {/* id=item.PrimaryKey */}) |
                @Html.ActionLink("Details", "Details", new {/* id=item.PrimaryKey */}) |
                @Html.ActionLink("Delete", "Delete", new {/* id=item.PrimaryKey */})
            </td>
        </tr>
    }

</table>
</body>
</html>
